fn find_all_quoted(text) {
    finds = []
    has = true
    window = text
    while has and window.size > 0 {
        collected = ""
        first = window.find("\"")
        if first != -1 {
            window = window[first+1..(window.size-1)]
            second = window.find("\"")
            if second != -1 {
                idx = second - 1
                if idx > 0 {
                    collected = window[0..idx]
                    finds.push(collected)
                }

                window = window[second+1..(window.size-1)]
            } else { has = false }
        } else { has = false }
    }

    return finds
}

