fn bubbleSort(list) {
    n = list.size
    swapped = true
    while swapped {
        swapped = false
        i = 0
        while i < n - 1 {
            if (list[i] > list[i + 1]) {
                temp = list[i]
                list[i] = list[i + 1]
                list[i + 1] =  temp
                swapped = true
            }
            i = i + 1
        }
    }
}

